<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Components.TimePickerFragment">

    <NumberPicker
        android:id="@+id/en_hour"
        style="@style/NumberPickerStyleWhiteText"
        android:layout_width="153dp"
        android:layout_height="51dp"
        android:background="@color/black_opacity_30"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/en_minutes"
        android:layout_width="163dp"
        android:layout_height="51dp"

        android:layout_marginStart="8dp"
        android:background="@color/black_opacity_30"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/en_hour"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hours"
        app:layout_constraintEnd_toEndOf="@+id/en_hour"
        app:layout_constraintStart_toStartOf="@+id/en_hour"
        app:layout_constraintTop_toBottomOf="@+id/en_hour" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="minutes"
        app:layout_constraintEnd_toEndOf="@+id/en_minutes"
        app:layout_constraintStart_toEndOf="@+id/en_hour"
        app:layout_constraintTop_toBottomOf="@+id/en_minutes" />

</androidx.constraintlayout.widget.ConstraintLayout>