<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newEventSetting.GetReadyFragment">

    <TextView
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="...LAST DETAILS..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="183dp"
        android:text="How much time to get ready?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <FrameLayout
        android:id="@+id/firstReadyTime"
        android:layout_width="330dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


    <TextView
        android:id="@+id/tv_areYouSure"
        android:layout_width="336dp"
        android:layout_height="109dp"
        android:layout_marginTop="32dp"
        android:text="Sure? Let's consider some minutes to find the keys, to choose the shoes.."
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/firstReadyTime"
        app:layout_constraintTop_toBottomOf="@+id/firstReadyTime" />


    <FrameLayout
        android:id="@+id/secondReadyTime"
        android:layout_width="330dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="@+id/tv_areYouSure"
        app:layout_constraintTop_toBottomOf="@+id/tv_areYouSure" />


    <TextView
        android:id="@+id/tv_leavingPoint"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:text="Leaving point"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/textView12"
        app:layout_constraintEnd_toStartOf="@+id/textView12" />

    <TextView
        android:id="@+id/tv_meetingPoint"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Meeting point"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/textView12"
        app:layout_constraintStart_toEndOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="- - - - - - - - - - >"
        app:layout_constraintBottom_toTopOf="@+id/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tv_isTomorrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tomorrow"
        android:textColor="@color/light_red"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/tv_travelTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel time"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="@+id/textView12"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toStartOf="@+id/textView12" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="287dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/light_red"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="@+id/tv_isTomorrow"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/tv_isTomorrow"
        app:layout_constraintTop_toBottomOf="@+id/tv_isTomorrow" />

    <Button
        android:id="@+id/next"
        style="@style/CustomMaterialButton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="16dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/back"
        style="@style/CustomMaterialButton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="16dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>