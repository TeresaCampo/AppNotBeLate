<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newEventSetting.InfoCarFragment">

    <TextView
        android:id="@+id/tv_timeToPark"
        android:layout_width="318dp"
        android:layout_height="40dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="24dp"
        android:text="How much time you think you will need to park near the meeting point?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.298"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frg_reachTheCar" />

    <FrameLayout
        android:id="@+id/frg_parkTheCar"
        android:layout_width="133dp"
        android:layout_height="62dp"
        app:layout_constraintStart_toStartOf="@+id/tv_timeToPark"
        app:layout_constraintTop_toBottomOf="@+id/tv_timeToPark" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="330dp"
        android:layout_height="39dp"
        android:layout_marginTop="100dp"
        android:text="How much time to reach your car from the leaving point?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_timeToPark"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frg_reachTheCar"
        android:layout_width="133dp"
        android:layout_height="62dp"
        app:layout_constraintStart_toStartOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/textView17"></FrameLayout>

    <TextView
        android:id="@+id/tv_leavingPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:text="Leaving point"
        app:layout_constraintBottom_toBottomOf="@+id/textView12"
        app:layout_constraintEnd_toStartOf="@+id/textView12" />

    <TextView
        android:id="@+id/tv_meetingPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Meeting point"
        app:layout_constraintBottom_toBottomOf="@+id/textView12"
        app:layout_constraintStart_toEndOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="- - - - - - - - - - >"
        app:layout_constraintBottom_toTopOf="@+id/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_travelTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel time"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="@+id/textView12" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="36dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="32dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_infoCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="You will use the car, let me know something more...
"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_isTomorrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tomorrow"
        android:textColor="#F44336"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/tv_meetingPoint"
        app:layout_constraintStart_toEndOf="@+id/tv_leavingPoint"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="287dp"
        android:layout_height="29dp"
        android:layout_marginTop="5dp"
        android:textColor="#F44336"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="@+id/tv_isTomorrow"
        app:layout_constraintStart_toStartOf="@+id/tv_isTomorrow"
        app:layout_constraintTop_toBottomOf="@+id/tv_isTomorrow" />


</androidx.constraintlayout.widget.ConstraintLayout>